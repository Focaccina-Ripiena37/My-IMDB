<%= form_with(model: actor) do |form| %>
  <% if actor.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(actor.errors.count, "error") %> prohibited this actor from being saved:</h2>

      <ul>
        <% actor.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :name, style: "display: block" %>
    <%= form.text_field :name %>
  </div>

  <div>
    <%= form.label :dob, style: "display: block" %>
    <%= form.date_field :dob %>
  </div>

  <div>
    <%= form.label :birthplace, style: "display: block" %>
    <%= form.text_field :birthplace %>
  </div>

  <div>
    <%= form.label :net_worth, "Net worth (USD)", style: "display: block" %>
    <%= form.number_field :net_worth, step: 1 %>
  </div>

  <div class="field">
    <%= form.label :awards, "Premi (uno per riga)" %>
    <%= form.text_area :awards, rows: 6, placeholder: "Esempio:\nOscar 2024 – Miglior attore non protagonista (Oppenheimer)\nGolden Globe – Miglior attore (Forrest Gump)" %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
