<h2>Edit casting</h2>
<%= form_with model: [@movie, @casting], local: true do |form| %>
  <div class="field">
    <%= form.label :actor_id, "Actor" %>
    <%= form.collection_select :actor_id, Actor.all, :id, :name %>
  </div>

  <div class="field">
    <%= form.label :character, "Character" %>
    <%= form.text_field :character %>
  </div>

  <%= form.submit "Update" %>
<% end %>
